        <!--android:layout_alignParentBottom="true"-->
        <!--android:text="Rotate"-->
        <!--android:textAlignment="center"-->
        <!--android:textColor="#fff"-->
        <!--android:textSize="15sp" />-->

        <!--<ImageView-->
        <!--android:id="@+id/rotate"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_above="@id/rotate_text"-->
        <!--android:src="@drawable/ic_rotate" />-->
        <!--</RelativeLayout>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/auto_blur_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/auto_blur_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Auto Blur"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/auto_blur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/auto_blur_text"
                android:layout_margin="5dp"
                android:src="@drawable/ic_blur" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invert_colors_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/invert_colors_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Invert Colors"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/invert_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/invert_colors_text"
                android:src="@drawable/ic_invert_colors" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>